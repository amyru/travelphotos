<%= link_to 'Back', pins_path %>

<div class="row">
	<div class="col-md-offset-1 col-md-8">
		<div class="box">
		 <%= image_tag @pin.image.url %>
		</div>

		<div class="jumbotron">
			<div class="container">
				<p>
				  <%= @pin.description %>

					<!--facebook like button -->
					<div class="fb-like" data-href="http://mytravelphotos.herokuapp.com" data-width="200px" data-layout="standard" data-action="like" data-show-faces="true" data-share="true"></div>
				  <!--needed for facebook like button --> 
				  <div id="fb-root"></div>
					<script>(function(d, s, id) {
					  var js, fjs = d.getElementsByTagName(s)[0];
					  if (d.getElementById(id)) return;
					  js = d.createElement(s); js.id = id;
					  js.src = "//connect.facebook.net/en_US/sdk.js#xfbml=1&version=v2.0";
					  fjs.parentNode.insertBefore(js, fjs);
					}(document, 'script', 'facebook-jssdk'));</script>						
				</p>

				<% if @pin.admin == current_admin %>
					<%= link_to 'Edit', edit_pin_path(@pin) %> |
				<% end %>	
			</div>
		</div>	
	</div>
</div>